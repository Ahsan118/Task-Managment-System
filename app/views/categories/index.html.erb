<div class="max-w-full h-full mx-auto pt-20 pb-10 px-7 bg-gray-100 border border-gray-300 h-full relative overflow-hidden">
  <div class="absolute top-0 left-0 w-full px-7 py-5 bg-gray-100 flex justify-between items-center">
    <h2 class="text-2xl font-bold text-black">Categories</h2>
    <div data-controller="modal">
      <div class="flex justify-end">
        <%= button_tag "+ Create", type: "button", class: "px-5 py-2 bg-blue-800 text-white text-lg font-medium rounded-md hover:bg-blue-700", data: { action: "click->modal#open" } %>
      </div>
      <%= render "new", category: Category.new %>
    </div>
  </div>

  <div class="bg-white p-6 rounded pt-6 h-full flex flex-col">
    <div class="flex justify-between items-center mb-6">
      <div class="relative" data-controller="search">
        <%= form_with url: categories_path, method: :get, local: false, data: { controller: "search" } do %>
          <input type="text" name="keyword" placeholder="Search" value="<%= params[:keyword] %>" 
                 class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent w-96"
                 data-action="input->search#performSearch" />
          <i class="fas fa-search absolute left-3 top-3 text-gray-500"></i>
        <% end %>
      </div>
    </div>

    <div id="search-results" class="flex-grow">
      <%= render partial: "table", locals: { categories: @categories } %>
    </div>
  </div>
</div>