<div class="flex h-screen">
  <div class="w-2/5 p-6 flex flex-col justify-center items-center relative bg-gradient-to-r from-blue-700 to-blue-900">
    <div class="absolute top-6 left-12">
      <%#= image_tag('logo.svg', alt: "Logo", class: "h-20 w-auto") %>
    </div>

    <div class="flex flex-col items-center w-full">
      <div class="text-white mb-8 mr-16">
        <h1 class="text-4xl font-bold mb-2">Welcome to</h1>
        <h1 class="text-5xl font-bold">Task Managment System</h1>
      </div>
      <div class="w-full flex justify-center">
        <%= button_to 'Sign In as an User', new_user_session_path, method: :get, class: "w-96 bg-white text-blue-900 font-semibold py-3 px-6 border border-blue-900 rounded-lg shadow tracking-wide" %>
      </div>
    </div>
  </div>

  <div class="w-3/5 bg-white flex flex-col items-center justify-center">
    <div class="w-1/2 bg-white p-10 rounded-lg">
      <div class="text-3xl font-bold text-gray-900 mb-4">
        Sign up as a
        <span class="block text-blue-800">User</span>
      </div>
      <hr class="border-t-4 border-gray-300 w-14 mb-20">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <label for="email" class="block text-lg font-medium text-gray-900">Email *</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:border-blue-500" %>
        </div>
        <div>
          <label for="password" class="block text-lg font-medium text-gray-900">Password *</label>
          <%= f.password_field :password, autocomplete: "new-password" ,class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:border-blue-500"%>
        </div>
        <div>
          <label for="password_confirmation" class="block text-lg font-medium text-gray-900">Password confirmation *</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:border-blue-500"%>
        </div>
        <div>
          <%= f.submit "Sign Up", class: "w-full text-xl py-3 px-4 bg-blue-800 text-white font-bold rounded-md hover:bg-blue-700 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
