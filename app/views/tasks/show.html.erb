<div class="max-w-full h-full mx-auto pt-20 px-7 pb-11 bg-gray-100 border border-gray-300 relative">
  <div class="absolute top-0 left-0 w-full px-7 py-6 bg-gray-100 flex items-center">
    <a href="<%= tasks_path %>" class="text-black mr-4">
      <i class="fa-solid fa-angle-left fa-lg"></i>
    </a>
    <h2 class="text-2xl font-bold text-black">View Task</h2>
  </div>

  <div class="px-8 pt-8 bg-white">
    <div class="pb-6 mb-6">
      <h3 class="text-lg font-semibold text-blue-800 mb-4">Task Details</h3>
      <div class="grid grid-cols-2 gap-y-6 gap-x-32">
        <div>
          <span class="font-semibold text-base text-black">Name</span>
          <p class="mt-1 text-gray-500"><%= @task.title %></p>
        </div>
        <div>
          <span class="font-semibold text-base text-black">Status</span>
          <p class="mt-1 text-gray-500"><%= @task.status.titleize %></p>
        </div>
        <div>
          <span class="font-semibold text-base text-black">Due Date</span>
          <p class="mt-1 text-gray-500"><%= @task.due_date.strftime("%d %b %Y") %></p>
        </div>
        <div>
          <span class="font-semibold text-base text-black">Category Name</span>
          <p class="mt-1 text-gray-500"><%= @task.category.name %></p>
        </div>
        <div class="col-span-2">
          <span class="font-semibold text-base text-black">Description</span>
          <p class="mt-1 text-gray-500"><%= @task.description.presence || "No description provided" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
