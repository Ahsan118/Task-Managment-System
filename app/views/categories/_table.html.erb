<div class="table-container flex flex-col justify-between h-full">
  <table class="min-w-full table-auto border-collapse bg-white border border-gray-300">
    <thead class="bg-gray-100 border-b border-gray-300">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-black uppercase tracking-wider w-3/12">Category Name</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-black uppercase tracking-wider w-2/12">Action</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% categories.each do |category| %>
        <tr>
          <td class="px-6 py-3 whitespace-nowrap text-sm text-gray-800 w-3/12"><%= category.name %></td>
          <td class="px-6 py-3 whitespace-nowrap text-right text-sm w-2/12 relative" data-controller="dropdown">
            <button class="text-gray-600 hover:text-gray-700" id="action-<%= category.id%>" data-action="click->dropdown#toggle">
              <i class="fa-solid fa-ellipsis fa-2x"></i>
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-32 bg-white rounded-md shadow-lg z-50">
              <ul>
                <li>
                  <div data-controller="modal">
                    <button class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 w-full" id="edit-action-<%= category.id%>" data-action="click->modal#open">
                      <i class="fas fa-edit mr-2"></i> Edit
                    </button>
                    <%= render "edit", category: category %>
                  </div>
                </li>
                <li>
                  <div data-controller="modal">
                    <button class="text-gray-700 flex items-center px-4 py-2 text-sm hover:bg-gray-100 w-full" data-action="click->modal#open" data-id="<%= category.id %>">
                      <i class="fa fa-trash mr-2"></i> Delete
                    </button>
                    <%= render 'shared/delete_modal', record: category, delete_path: category_path(category) %>
                  </div>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
