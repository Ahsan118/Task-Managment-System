<div id="deleteModal-<%= dom_id(record) %>" class="hidden fixed inset-0 z-50" data-modal-target="modal">
  <div class="fixed inset-0 bg-black opacity-50"></div>
  <div class="fixed inset-0 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-xl mx-auto relative">
      
      <button type="button" class="text-gray-500 hover:text-gray-700 text-3xl absolute top-2 right-5" data-action="click->modal#close" aria-label="Close">
        &times;
      </button>
      
      <div class="p-8">
        <h3 class="text-lg font-semibold text-black mb-1 text-left">Delete Record</h3>
        <p class="text-sm text-gray-700 mb-6 text-left">Are you sure you want to delete this record? This action cannot be undone.</p>

        <div class="flex justify-end space-x-4">
          <button type="button" class="px-4 py-2 font-semibold text-blue-600 border border-blue-600 rounded-md hover:bg-blue-100" data-action="click->modal#close">
            Cancel
          </button>

          <%= button_to 'Delete', delete_path, method: :delete, class: "px-4 py-2 bg-red-600 font-semibold text-white rounded-md hover:bg-red-700" %>
        </div>
      </div>
    </div>
  </div>
</div>
