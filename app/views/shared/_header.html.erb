<header class="bg-gray-200 shadow-md w-full" style="background-color: gray;">
  <div class="flex justify-between items-center px-6 py-4">
    <div class="flex-1"></div>   
    
    <div class="relative flex items-center" data-controller="dropdown">
      <button type="button" class="flex items-center space-x-4 cursor-pointer" data-action="click->dropdown#toggle">
        <div class="flex flex-col text-white">
          <span class="font-semibold"><%= current_user.email %></span>
        </div>
        
        <i class="fas fa-chevron-down text-white" data-dropdown-target="icon"></i>
      </button>

      <!-- Dropdown Menu -->
      <div data-dropdown-target="menu" class="hidden absolute right-0 top-full mt-2 w-36 bg-white shadow-lg rounded-md py-2 z-10">
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-center block w-full text-left px-4 py-2 text-gray-800 hover:bg-gray-100" %>
      </div>
    </div>
  </div>
</header>
